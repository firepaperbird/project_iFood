<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TransactionHistoryDetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="--- Delivery Info ---"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Id : 123DEVILEDEGGS"
            android:textStyle="bold"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:tag="txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successful"
                android:textStyle="bold"
                android:textColor="#08e01e"
                android:textSize="12dp"/>
        </LinearLayout>

        <TextView
            android:tag="txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bui Quang Huy"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#000000"/>
        <TextView
            android:tag="txtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01665169260"
            android:textStyle="bold"
            android:textSize="12dp"/>
        <TextView
            android:tag="txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="193 Phạm Văn Hai, Phường 5, Quận Tân Bình, TPHCM"
            android:textStyle="bold"
            android:textSize="12dp"/>
    </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textStyle="bold"
    android:text="--- Transaction Type ---"
    android:gravity="center"
    android:layout_marginTop="20dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:paddingLeft="20dp">

    <TextView
    android:tag="txtTransactionType"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cash on delivery"
    android:textStyle="bold"
    android:textSize="12dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="--- Transaction Detail ---"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:tag="layoutDishInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <ImageView
                android:tag="imageDish"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/deviled_eggs"/>

            <TextView
                android:tag="txtDishName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Deviled Eggs"
                android:textAlignment="center"
                android:textSize="14sp" />


        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:tag="layoutIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="#f0eded">


                <TextView
                    android:layout_alignParentStart="true"
                    android:tag="txtIngredientName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Potatoes"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView

                    android:layout_toRightOf="@id/txtIngredientName"
                    android:tag="edtIngredientAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="454"/>

                <TextView
                    android:layout_toRightOf="@id/edtIngredientAmount"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="grams"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5$"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"/>

            </TableRow>

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:tag="layoutIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="#f0eded">


                <TextView
                    android:layout_alignParentStart="true"
                    android:tag="txtIngredientName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Garlic powder"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView

                    android:layout_toRightOf="@id/txtIngredientName"
                    android:tag="edtIngredientAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="0.5"/>

                <TextView
                    android:layout_toRightOf="@id/edtIngredientAmount"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="tsp"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5$"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"/>

            </TableRow>

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:tag="layoutIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="#f0eded">


                <TextView
                    android:layout_alignParentStart="true"
                    android:tag="txtIngredientName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Milk"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView

                    android:layout_toRightOf="@id/txtIngredientName"
                    android:tag="edtIngredientAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="100"/>

                <TextView
                    android:layout_toRightOf="@id/edtIngredientAmount"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ml"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5$"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"/>

            </TableRow>

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:tag="layoutIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:background="#f0eded">


                <TextView
                    android:layout_alignParentStart="true"
                    android:tag="txtIngredientName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pork"
                    android:gravity="center"
                    android:textSize="18sp" />
                <TextView

                    android:layout_toRightOf="@id/txtIngredientName"
                    android:tag="edtIngredientAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="200"/>

                <TextView
                    android:layout_toRightOf="@id/edtIngredientAmount"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="grams"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:tag="txtIngredientPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5$"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20$"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="end"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>