<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/padding_large"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageCookbook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cookbook_image_blank"
        android:onClick="viewDetailCookbook"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shadow_cookbook"
        android:alpha="0.9"
        android:layout_gravity="top"/>

    <TextView
        android:id="@+id/txtCookbookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:textColor="@color/colorWhite"
        android:text="Cookbook Title"/>

    <TextView
        android:id="@+id/txtTotalRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_large"
        android:textSize="8dp"
        android:text="Total Recipes"/>

</FrameLayout>