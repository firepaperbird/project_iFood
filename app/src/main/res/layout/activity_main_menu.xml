<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_drawer"
    tools:context=".mainMenuActivity">

    <!-- Content -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listMenu"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/searching_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/type_of_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tags "/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/layout_tags_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/add_new_tag_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_other_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:inputType="textShortMessage"
                                android:imeOptions="actionDone"
                                android:hint="other tag"/>

                            <ImageButton
                                android:id="@+id/btn_add_other_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/trans"
                                android:src="@drawable/ic_add_circle_outline"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtNoResultsWereFound"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:visibility="visible"
                    android:text="Sorry, no result were found"/>

            </LinearLayout>

        </ScrollView>

    <include layout="@layout/bottom_layout"/>

    <include layout="@layout/drawer_layout"/>

</android.support.v4.widget.DrawerLayout>

