<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    tools:context=".ShoppingList">

    <!-- Content -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ShoppingList">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="169dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/aaa"
            app:srcCompat="@drawable/aaa" />

        <TextView
            android:id="@+id/TxtAddBuy"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="-7dp"
            tools:background="@android:color/black" />

        <ImageView
            android:id="@+id/imagemini"
            android:layout_width="71dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/aaaa" />

        <Button
            android:id="@+id/BtnBuy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/TxtAddBuy"
            android:layout_toStartOf="@+id/BtnAdd"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            tools:background="@drawable/ic_action_purchase_order" />

        <Button
            android:id="@+id/BtnAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/TxtAddBuy"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            tools:background="@drawable/ic_action_add_more_list" />

        <TextView
            android:id="@+id/rBtnAdd"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:gravity="center"
            android:layout_marginStart="@dimen/padding_large"
            android:text="RECIPES"
            tools:textColor="@android:color/white" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="218dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/Img"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/c3"/>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="205dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Delicious,Rich and simple chocolate"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/BtnDelicious"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/inconbtn" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:background="#f0eded">

                        <CheckBox
                            android:id="@+id/CbCongThuc"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/padding_small"
                            android:checked="true"/>

                        <TextView
                            android:id="@+id/txtCongthuc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2 Egg Yolks"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="18sp" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

